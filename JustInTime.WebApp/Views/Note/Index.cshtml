@model IEnumerable<JustInTime.DAL.Domain.Entities.Note>
@{
    ViewData["Title"] = "Index";
}

<!--css style and js links here for this site.-->
<link rel="stylesheet" href="css/mynotes.css" />

<!--this is Sakura blossom background (beginning)-->
<link rel="stylesheet" href="css/sakura.css" />
<script src="js/sakura.js" text="text/javascript"></script>

<script>
    var sakura = new Sakura('body', {
        colors: [
            {
                gradientColorStart: 'rgba(255, 183, 197, 0.9)',
                gradientColorEnd: 'rgba(255, 197, 208, 0.9)',
                gradientColorDegree: 120,
            },
            {
                gradientColorStart: 'rgba(255,189,189)',
                gradientColorEnd: 'rgba(227,170,181)',
                gradientColorDegree: 120,
            },
            {
                gradientColorStart: 'rgba(212,152,163)',
                gradientColorEnd: 'rgba(242,185,196)',
                gradientColorDegree: 120,
            },
        ],
        delay: 200,
    });
</script>
<!--this is Sakura blossom background (ending of code)-->

<!--this is the name of page(it will appear at the top of the site)-->
<h1 id="pageTitle">My Notes</h1>



<!-- this is CREATE button-->
    <p>
    <a id="GlobalButton" asp-action="Create">Create New</a>
    </p>
    <!-- this is CREATE button-->


    <!--this is search button start-->
    <form asp-controller="Note" asp-action="Index">
    <p id="search">
        🔎: <input  type="text" name="SearchString" />
        <input id="searchButton" type="submit" value="SEARCH" />
    </p>
</form>  

<a id="searchBack" asp-action="Index">BACK TO FULL LIST</a>
    <!--this is search button end-->
   
    
    <!--this is sort button start-->
    <a id="SortButtons1" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Title</a>
    <a id="SortButtons2" asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">DateCreated</a>
    <!--this is sort button end-->


    @foreach (var item in Model)
    {
        <a class="home-button" id="mycard1button" asp-area="" asp-controller="ToDo" asp-action="Index">
            <div class="card">
                <div class="details">
                    <div class="content">
                        <h6>
                            @Html.DisplayFor(modelItem => item.Title)
                        </h6>
                        <h6>
                            @Html.DisplayFor(modelItem => item.Type)3

                        </h6>
                        <h6>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </h6>
                        <p>Click Me</p>
                    </div>
                </div>
                <a asp-action="Edit" asp-route-id="@item.NoteId">🖋</a> |
                <a asp-action="Delete" asp-route-id="@item.NoteId">❌</a>
            </div>
        </a>
    }

