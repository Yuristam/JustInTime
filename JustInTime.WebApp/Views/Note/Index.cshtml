@model IEnumerable<JustInTime.DAL.Domain.Entities.Note>

@{
    ViewData["Title"] = "Index";
}

<!--css style and js links here for this site.-->
<link rel="stylesheet" href="css/mynotes.css" />
<script defer src="js/mynotes.js"></script>

<!--this is the name of page(it will appear at the top of the site)-->
<h1>My Notes</h1>
<section class="hidden">
    <h1>My Notes</h1>
    <p>This is the list of notes</p>
</section>

<section class="hidden">
    <h2>Write Your Notes</h2>
    <p>
        Write whatever you want. You can write here you ideas.
    </p>
</section>


<!-- this is CREATE button-->
<section class="hidden">
    <p>
        <a asp-action="Create">Create New</a>
    </p>


    <!--this is search button-->
    <form asp-controller="Note" asp-action="Index">
        <p>
            Title: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

    <!--this is search button end-->



    <table class="hidden">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoteType)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoteType)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

