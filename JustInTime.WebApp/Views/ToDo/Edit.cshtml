@model JustInTime.DAL.Domain.Entities.ToDo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit ToDo</h1>

<h4>ToDo Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDoId" /> 
            <div class="form-group">
                 <div class="form-group">
                <label asp-for="CheckListId" class="control-label"></label>
                    <select asp-for="CheckListId" class="form-control" asp-items="ViewBag.CheckListId"></select>
            </div>
                <label asp-for="TaskDescription" class="control-label"></label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}