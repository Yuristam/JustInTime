@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JustInTime | CalendarJS</title>
    <link rel="stylesheet" href="~/css/dycalendar.css">
    <link rel="stylesheet" href="~/css/calendarstyle.css">
</head>
<body>
    <section>
        <div class="box">
            <div class="container">
                <div id="dycalendar"></div>
            </div>
        </div>
    </section>
    <script src="~/js/dycalendar.js"></script>
    <script>
        dycalendar.draw({
            target: '#dycalendar',
            type: 'month',
            dayformat: 'full',
            monthformat: 'full',
            highlighttargetdate: true,
            prevnextbutton: 'show'
        })
    </script>
    <div class="button">
        <a class="home-button" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</body>
</html>