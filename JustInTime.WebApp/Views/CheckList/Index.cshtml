@model IEnumerable<JustInTime.DAL.Domain.Entities.CheckList>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/checklistindexstyle.css" />


<h1 id="pageTitle">My CheckLists List</h1>

<!--create button-->
<p>
    <a id="createButton" asp-action="Create">Create New</a>
</p>
<!--create button-->

<!--search button start-->
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<!--search button end-->

<!--sort begins-->
<th>
    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Title</a>
</th>
<!--sort ends-->

<!--==================================this is CheckList card=======================================-->
@foreach (var item in Model)
{
    <a class="home-button" id="mycard1button" asp-area="" asp-controller="ToDo" asp-action="Index">
        <div class="card">
            <div class="details">
                <div class="content">
                    <h3>
                        @Html.DisplayFor(modelItem => item.Title)
                    </h3>
                    <h6>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </h6>
                    <p>Click Me</p>
                </div>
            </div>
            <a class="home-button"  asp-action="Edit" asp-route-id="@item.CheckListId">✏</a> |
            <a class="home-button"  asp-action="Delete" asp-route-id="@item.CheckListId">❌</a>
        </div>
    </a>
}


